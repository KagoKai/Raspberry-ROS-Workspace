<launch>
    <!-- Arguments -->
    <arg name="map_file" default="$(find mecabot_navigation)/maps/demo_map_save.yaml"/>
    <arg name="move_forward_only" default="true"/>

    <!-- Sensor init -->
    <include file="$(find mecabot_bringup)/launch/mecabot.launch"/>

    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- Robot descrition (if use real robot) -->
    <group unless="$(arg use_simulation)">
        <include file="$(find mecabot_bringup)/launch/mecabot_remote.launch"/>
        <include file="$(find mecabot_bringup)/launch/mecabot_odom.launch"/>
    </group>

    <!-- AMCL -->
    <include file="$(find mecabot_navigation)/launch/amcl.launch"/> 
    <!-- MCL -->
    <!-- <include file="$(find als_ros)/launch/mcl.launch"/> -->

    <!-- move_base -->
    <include file="$(find mecabot_navigation)/launch/move_base.launch">
        <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
</launch>